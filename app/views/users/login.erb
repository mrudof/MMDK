<h1>Login</h1>
<% if @errors %>
  <p><%= @errors %></p>
<% end %>


<form action= "/login" method = "post">
<label for "email">Email Address:</label>
<input type="text" name = "user[email]"/>
<br>
<label for "password">Password:</label>
<input type="password" name = "user[password]"/>
<br>
<input type="submit" value="Login">
</form>
