<div>
  <div class="question-title" id="<%=@question.id%>">
    <h2><%= @question.title %></h2>
  </div>

  <div>
    <p><%= @question.text %></p>
  </div>

  <div>
    <p>Asked <%= @question.created_at.strftime('%b %d \'%y at %H:%M') %></p>
    <div>
      <p><%= @question.user.username %></p>
    </div>
  </div>

      <div>
        <p class="vote-count">Vote Count: <%= @question.vote_count %></p>
          <% if login? %>
    <% unless session[:user_id] == @question.user.id %>
        <form id="upvote-button" action="/questions/<%= @question.id %>/upvote" method="POST">
          <button  type="submit">Upvote</button>
        </form>
        <form id="downvote-button" action="/questions/<%= @question.id %>/downvote" method="POST">
          <button type="submit">Downvote</button>
        </form>
      </div>
    <% end %>
    <% end %>
  <%= erb :'comments/question/index' %>

</div>

<%= erb :'answers/show' %>

