<div class="container">
<div>
  <div class="card">
    <div class="question-title" id="<%=@question.id%>">
      <h2><%= @question.title %></h2>
    </div>

    <div class="question-and-votes">
      <div class="question-vote">
        <p class="vote-count"><%= @question.vote_count %></p>
          <form id="upvote-button" action="/questions/<%= @question.id %>/upvote" method="POST">
           <button class="up-pizza" type="submit"></button>
          </form>
          <form id="downvote-button" action="/questions/<%= @question.id %>/downvote" method="POST">
            <button class="down-pizza" type="submit"></button>
          </form>
      </div>
      <div class="main-question">
        <div class="question-text">
          <p><%= @question.text %></p>
        </div>
        <div class="profile-card">
          <p>Asked <%= @question.created_at.strftime('%b %d \'%y at %H:%M') %></p>
          <div>
            <p><%= @question.user.username %></p>
          </div>
        </div>
      </div>
    </div>
    <%= erb :'comments/question/index' %>
  </div>

</div>

<%= erb :'answers/show' %>
</div>
