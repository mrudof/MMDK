<div class="answer-comments">
  <div>
    <% answer.comments.each do |comment| %>
      <div>
        <p><%= comment.text %> - <a href="/users/<%= comment.user.id %>"><%= comment.user.username %></a> <%= comment.created_at.strftime('%b %d \'%y at %H:%M') %></p>
      </div>
    <% end %>
  </div>
  <div class="new-answer-comment-container">
    <p>
      <a class="new-answer-comment-link" href="/questions/<%= @question.id %>/answers/<%= answer.id %>/comments/new">Add a comment</a>
    </p>
  </div>
</div>
