<div class="card">
  <div id="question-comments">
    <div>
      <% @question_comments.each do |comment| %>
        <div>
          <p><%= comment.text %> - <a href="/users/<%= comment.user.id %>"><%= comment.user.username %></a><%= comment.created_at.strftime('%b %d \'%y at %H:%M') %></p>
        </div>
      <% end %>
    </div>
    <div class="new-question-comment-container">
      <p>
        <a class="new-question-comment-link" href="/questions/<%= @question.id %>/comments/new">Add a comment</a>
      </p>
    </div>
  </div>
</div>
